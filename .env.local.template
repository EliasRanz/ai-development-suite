# AI Agent Local Configuration
# This file contains sensitive information for AI agents working on this project
# It should NOT be committed to version control

# Local Development Paths (customize for your system)
PROJECT_ROOT=/path/to/ai-tools
DATA_DIR=${PROJECT_ROOT}/data
CONFIG_DIR=${PROJECT_ROOT}/config
LOGS_DIR=${PROJECT_ROOT}/logs

# Database Configuration (for AI Project Manager)
AI_PM_DB_HOST=localhost
AI_PM_DB_PORT=5432
AI_PM_DB_USER=aipm
AI_PM_DB_PASSWORD=your-secure-db-password
AI_PM_DB_NAME=ai_project_manager

# Storage Configuration
AI_PM_STORAGE_USER=aipm
AI_PM_STORAGE_PASSWORD=your-secure-storage-password
AI_PM_SECRET_KEY=your-generated-secret-key

# AI Studio Configuration
AI_STUDIO_LOG_LEVEL=debug
AI_STUDIO_DATA_DIR=${DATA_DIR}/ai-studio
AI_STUDIO_CONFIG_DIR=${CONFIG_DIR}/ai-studio

# Development Tools
DOCKER_COMPOSE_FILE=ai-pm/docker-compose.yml
CLI_SCRIPT=ai-pm/scripts/project-manager.sh

# API Endpoints
AI_PM_API_URL=http://localhost:8000/api
AI_STUDIO_API_URL=http://localhost:3000/api

# Security Settings
ENABLE_DEBUG_MODE=true
LOG_SENSITIVE_DATA=false
REQUIRE_AUTHENTICATION=false

